---
import Section from "../Section.astro";

import { certificates } from "@cv";
---

<h2>Certificates</h2>
<ul>
  {
    certificates.map(({ name, date, issuer, url }) => {
      const startYear = new Date(date).getFullYear();

      const years = `${startYear}`;

      return (
        <li>
          <article>
            <header>
              <div>
                <h3>{name}</h3>
                <p>{issuer}</p>
              </div>

              <time>{years}</time>
            </header>
          </article>
        </li>
      );
    })
  }
</ul>

<style>
  h2 {
    margin-top: 16px;
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
